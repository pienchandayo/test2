#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/mouse.h> 

&mmv {
    time-to-max-speed-ms = <500>;
    acceleration-exponent = <1>;
};

&msc {
    time-to-max-speed-ms = <500>;
    acceleration-exponent = <1>;
};
&pd0 {
    status = "okay";
    sampling-interval = <10>;
    scale-multiplier = <1>;
    deadzone = <100>;
};

/ {
    keymap {
        compatible = "zmk,keymap";

        default_layer { // Layer 0
            // -------------------------------------
            // |     Z     |     M     |     K     |
            // |     A     |     B     |     C     |
            // |     D     |     E     |     F     |
            bindings = <
                &mkp LCLK    &bt BT_CLR    &kp K
                &kp A    &kp B    &kp C
                &kp D    &mmv MOVE_DOWN    &kp F
            >;
        };
    };
 };
/ {
    /* 1. アナログスティック本体の設定 */
    pd0: analog_stick {
        compatible = "zmk,input-analog-axis";
        /* nice!nano v2 の場合: P0.02(D0)=adc 0, P0.29(A1)=adc 5 です */
        io-channels = <&adc 0>, <&adc 5>; 
    };

    /* 2. マウス移動の計算エンジン */
    zip_xy_scaler: zip_xy_scaler {
        compatible = "zmk,input-processor-scaler";
        #input-processor-cells = <2>;
        type = <0x02>;        /* REL (相対移動) */
        codes = <0x00 0x01>;  /* X軸, Y軸 */
        track-remainders;
    };

    /* 3. リスナー：ここで 'xy-processors' を使うのが今回の肝です */
    joystick_listener {
        compatible = "zmk,input-listener";
        device = <&pd0>;
        /* エラー対策：input-processors ではなく xy-processors に変更 */
        xy-processors = <&zip_xy_scaler 5 1>; 
    };
};

/* スティックの詳細設定 */
&pd0 {
    status = "okay";
    sampling-interval-ms = <10>;
    report-interval-ms = <10>;
    deadzone = <100>;
};
